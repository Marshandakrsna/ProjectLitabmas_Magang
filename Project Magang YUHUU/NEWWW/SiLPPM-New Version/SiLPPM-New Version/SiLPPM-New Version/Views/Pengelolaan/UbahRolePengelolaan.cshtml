@{ ViewData["Title"] = "Ubah Role Pengelolaan"; }

<div class="card">
    <div class="card-header">
        <h3 class="card-title">
            Ubah Role
        </h3>

        <div class="card-tools">
            <button type="button" class="btn btn-tool" data-card-widget="collapse" data-toggle="tooltip" title="Collapse">
                <i class="fas fa-minus"></i>
            </button>
            <button type="button" class="btn btn-tool" data-card-widget="remove" data-toggle="tooltip" title="Remove">
                <i class="fas fa-times"></i>
            </button>
        </div>
    </div>
    <div class="card-body">
        <form method="post" asp-action="UbahRolePengelolaan" asp-controller="Pengelolaan">
            @Html.AntiForgeryToken()

       
            <div class="row">
            
                <div class="col-3 form-group">
                    <label>Nama</label>
                    <input type="text" autocomplete="off" class="form-control" name="tgl" id="txttgl" value="" />
                </div>
                <div class="col-3 form-group">
                    <label>Role</label>
                    <input type="text" autocomplete="off" class="form-control" name="judul" id="txtjudul" placeholder="Role" value="" />
                </div>
           
            </div>
            <div class="row">
                <div class="col-3">
                    <button type="submit" class="btn btn-success">Simpan</button>
                </div>
            </div>
        </form>
    </div>
    <!-- /.card-body -->
    <div class="card-footer">
        Footer
    </div>
    <!-- /.card-footer-->
</div>
<!-- /.card -->

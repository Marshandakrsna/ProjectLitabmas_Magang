@{ ViewData["Title"] = "Login";
        Layout = ""; }
<html lang="en">
<head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />

    <!-- Bootstrap -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css"
          rel="stylesheet"
          integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC"
          crossorigin="anonymous" />

    <!-- Material Icon -->
    <link rel="stylesheet" href="~/css/style.css" />
    <link href="https://cdn.jsdelivr.net/npm/@@mdi/font@5.x/css/materialdesignicons.min.css" rel="stylesheet" />

    <!-- Animate on Scroll -->
    <link href="https://unpkg.com/aos@2.3.1/dist/aos.css" rel="stylesheet" />

    <link href="~/sweetalert/sweetalert.min.js" />
    <link rel="stylesheet" href="sweetalert2.min.css">
    <script src="//cdn.jsdelivr.net/npm/sweetalert2@11"></script>

</head>
<body>
    <div class="page-wrapper">
        @if (TempData["err_message"] != null)
        {
            <script>
                        Swal.fire({
                            title: 'SiLPPM said : ',
                            text: "@TempData["err_message"].ToString()",
                            confirmButtonColor: '#f2aa4c',
                            confirmButtonText: 'Close'
                        })
            </script>}
        <!-- Card Wrapper -->
        <div class="d-flex justify-content-center align-items-center card-wrapper">
            <!-- Card Login -->
            <div data-aos="zoom-out-up" class="login-card">
                <div class="row login-card-row">
                    <!-- Left Side Column -->
                    <div class="col-md-7 col-xs-12 pt-2 px-4">
                        <!-- Atma Jaya Icon -->
                        <img data-aos="fade-right"
                             data-aos-delay="200"
                             src="~/images/atma-logo.png"
                             alt="Atma Icon"
                             class="img-fluid login-atma-icon mx-auto d-flex" />

                        <!-- Sistem Name-->
                        <p data-aos="fade-right" data-aos-delay="300" class="text-title">
                            Sistem Informasi
                            Penelitian dan Pengabdian Masyarakat Universitas Atma Jaya Yogyakarta
                        </p>
                        <hr style="border:dashed" />

                        <!-- Description -->
                        <p data-aos="fade-right"
                           data-aos-delay="400"
                           class="text-description">
                            Aplikasi Litabmas ( Sistem Informasi
                            Penelitian dan Pengabdian Masyarakat ) Universitas Atma Jaya Yogyakarta
                            adalah aplikasi berbasis web yang digunakan untuk menunjang proses administrasi
                            pengajuan proposal, monitoring, dan evaluasi penelitian dan pengabdian di Universitas Atma Jaya Yogyakarta.
                        </p>


                        <div class="wrapper-two d-flex justify-content-end">

                            <img data-aos="zoom-in-up"
                                 style="margin-top:90px"
                                 data-aos-delay="800"
                                 class="shape-blue"
                                 src="~/images/decoration-blue-tip-2.png"
                                 alt="decoration-blue-tip-2" />
                        </div>

                    </div>

                    <!-- Right Side Column -->
                    <div class="col-md-5 col-xs-12 login-right-content">
                        <!-- Title Login -->
                        <p data-aos="fade-left"
                           data-aos-delay="200"
                           class="login-card-text" style="color:white">
                            Login
                        </p>

                        @*FORM LOGIN*@
                        <form asp-action="do_login" asp-controller="Account" method="post">
                            <!-- Username Field -->

                            <div data-aos="fade-left"
                                 style="height:45px; border-radius:40px"
                                 data-aos-delay="300"
                                 class="input-group flex-nowrap mb-4 px-5">
                                <span class="input-group-text" id="addon-wrapping">
                                    <i class="mdi mdi-account-circle fa-lg" aria-hidden="true"> </i>
                                </span>
                                <input type="text"
                                       name="username"
                                       style="font-size:larger"
                                       class="form-control"
                                       required
                                       placeholder="Username"
                                       aria-label="Username"
                                       aria-describedby="addon-wrapping" />
                            </div>

                            <!-- Password Field -->
                            <div data-aos="fade-left"
                                 data-aos-delay="400"
                                 style="height:45px"
                                 class="input-group flex-nowrap mb-4 px-5">
                                <span class="input-group-text" id="addon-wrapping">
                                    <i class="mdi mdi-lock fa-lg" aria-hidden="true"> </i>
                                </span>
                                <input type="password"
                                       required
                                       name="password"
                                       style="font-size:larger"
                                       class="form-control"
                                       placeholder="Password"
                                       aria-label="Password"
                                       aria-describedby="addon-wrapping" />
                            </div>


                            <!-- Submit Button -->
                            <div data-aos="fade-left"
                                 data-aos-delay="500"
                                 class="input-group d-flex justify-content-center">
                                <input type="submit"
                                       class="btn btn-outline-warning"
                                       name="buttonLogin" />
                            </div>
                        </form>

                        <!-- Motto -->
                        <div class="mt-auto wrapper-motto">
                            <p data-aos="zoom-in-up"
                               data-aos-delay="900"
                               class="motto" style="color:darkorange;">

                                UNGGUL - INKLUSIF - HUMANIS - BERINTEGRITAS
                            </p>
                        </div>
                        <!-- Yellow Flower Icon -->
                        <div class="wrapper-zero d-flex justify-content-end">
                            <img data-aos="zoom-in-up"
                                 style="margin-top:5px"
                                 data-aos-delay="800"
                                 class="shape-yellow"
                                 src="~/images/decoration-yellow.png"
                                 alt="decoration-yellow" />
                        </div>

                    
                    </div>
                </div>
            </div>
        </div>

        <!-- Footer -->
        <div class="footer-login pt-2">
            <p>
                &copy; 2022 Kantor Sistem Informasi Universitas Atma Jaya Yogyakarta
            </p>
        </div>
    </div>
    <script src="//cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script src="sweetalert2.all.min.js"></script>
    <script src="sweetalert2.min.js"></script>
    <!-- Animate on Scroll Script -->
    <script src="https://unpkg.com/aos@2.3.1/dist/aos.js"></script>
    <script>AOS.init({ once: true });</script>
</body>

</html>
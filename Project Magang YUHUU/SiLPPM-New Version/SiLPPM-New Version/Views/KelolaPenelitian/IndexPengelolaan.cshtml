<body>
    <div class="px-3 mt-3">
        <div class="content-wrapper p-3">

            <div class="card-header">

                <a href="#" class="brand-link" style="background-color:lightblue">
                    <img src="~/images/profile-user.png" alt="Profile" class="brand-image img-circle elevation-3" style="opacity: .8">

                    <span style="color:black">
                        Kelola Reviewer Penelitian
                    </span>

                </a>
            </div>
            <a class="card-link" data-toggle="collapse" href="#menuone" aria-expanded="false" aria-controls="menuone" style="float:right; margin-right:40px">
                <span class="collapsed"><i class="fa fa-plus"></i></span>
                <span class="expanded"><i class="fa fa-minus"></i></span>
            </a>
            <div id="menuone" class="collapse">
                <div class="card-body" style="margin-left:10px">
                    <a href="IndexPengelolaan" class="btn" style="background-color:sandybrown">Kelola Reviewer Penelitian</a>
                    <a href="IndexReviewerPeneliti" class="btn" style="background-color:sandybrown">Reviewer Penelitian</a>
                </div>
            </div>
            <div style="width: 100%; overflow-x: auto;" class="col">
                <div class="card-body">
                    <table id="tblData" class="table table-bordered table-striped">
                        <thead>
                            <tr>
                                <th>AKSI</th>
                                <th>NAMA</th>
                                <th>FAKULTAS</th>
                                <th>PRODI</th>
                                <th>JUDUL</th>
                                <th>STATUS</th>
                                <th>TAHUN AKADEMIK</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model.data)
                            {
                                <tr>
                                    <td>
                                        <p style="font-weight:bold;color:royalblue; " onclick="showDetailProposal(@item.ID_PROPOSAL)">Pilih</p>
                                    </td>
                                    <td> @item.NAMA</td>
                                    <td>@item.FAK</td>
                                    <td>@item.PRODI</td>
                                    <td>@item.JUDUL</td>
                                    <td>@item.DESKRIPSI</td>
                                    <td>@item.TAHUN_AKADEMIK</td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>

    <!-- Modal Dialog 1 -->
    <div class="modal fade" id="DetailKelolaProposal" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered modal-lg" role="document">
            <div class="modal-content">
                <div class="modal-header" style="background-color:antiquewhite">
                    <h5 class="modal-title" style="color:black; font-family:'Trebuchet MS';font-display:swap; transition:cubic-bezier()"> <i class="fas fa-clipboard"></i>&nbsp; Detail Kelola Reviewer Penelitian</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <hr style="border:dashed; border-color:aliceblue" />
                <form class="formDetailKelolaReviewer" method="post" asp-action="addKelolaReviewer" asp-controller="KelolaPenelitian" enctype="multipart/form-data" novalidate>
                    @Html.AntiForgeryToken()

                    <div class="modal-body">
                        <input type="hidden" class="form-control" id="NPP" name="npp" value="" required>
                        <input type="hidden" class="form-control" id="ID_PROPOSAL" name="ID_PROPOSAL" value="" required>

                        <div class="mb-4">
                            <div class="input-group">
                                <label>
                                    Judul
                                    <input id="judulProposal" name="judulProposal" type="text" class="style1" style="margin-left:70px" />
                                </label>

                            </div>

                            <div class="input-group">
                                <label>
                                    Nama Dosen
                                    <input type="text" id="namaDosen" name="namaDosen" class="style1" style="margin-left:15px" />
                                </label>

                            </div>


                            <div class="input-group">
                                <label>
                                    Reviewer 1
                                    <select class="style1" id="nppReviewer1" name="nppReviewer1" style="margin-left:30px">
                                        <option hidden style="color:lightgrey; ">Pilih Reviewer 1</option>
                                        @foreach (var item in Model.reviewer)
                                        {
                                            <option value="@item.npp"> @item.NAMA_LENGKAP_GELAR</option>

                                        }
                                    </select>
                                </label>

                            </div>
                            <div class="input-group">
                                <label>
                                    Reviewer 2
                                    <select class="style1" id="nppReviewer2" name="nppReviewer2" style="margin-left:30px" onclick="getNamaReviewer(this.value)" required>
                                        <option hidden style="color:lightgrey; ">Pilih Reviewer 2</option>
                                        @foreach (var item in Model.reviewer)
                                        {
                                            <option value="@item.npp"> @item.NAMA_LENGKAP_GELAR</option>

                                        }
                                    </select>
                                </label>
                            </div>
                        </div>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-danger" data-dismiss="modal">Close</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
    <!-- Modal Dialog 1 End-->


                                        <td> @item.JUDUL</td>

                                        <td class="text-center">
                                            @*<i class="fas fa-sign-out-alt fa-lg nav-icon" style="color:firebrick; font-size:larger"></i><strong style="color:firebrick"> LOGOUT </strong>*@

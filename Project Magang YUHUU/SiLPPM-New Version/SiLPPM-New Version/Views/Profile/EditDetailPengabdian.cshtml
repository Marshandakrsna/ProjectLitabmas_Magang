            function getAnggota(id_proposal) {
                id_proposal = id_proposal;
                this.tempIdProposal = id_proposal;
                $('#id_proposal').val(id_proposal);
                $.ajax({
                    type: "GET",
                    url: "/Profile/ajaxGetPesertaPengabdian",
                    cache: false,
                    data: { id_proposal: id_proposal },
                    dataType: "json",
                    success: function (result) {
                        $('#ShowAnggota').modal('show');
                        var str = '';
                        var data = result.data;
                        for (var i = 0; i < data.length; i++) {
                            if (data[i].NAMA_LENGKAP_GELAR != "" && data[i].NAMA_LENGKAP_GELAR != null) {
                                str += '<tr><td>' + data[i].NPP + '</td><td>' + data[i].NAMA_LENGKAP_GELAR + '</td><td>' +
                                    data[i].INSTITUSI_ASAL + '</td><td>' + data[i].BIDANG_KEAHLIAN_PENGABDIAN + '</td><td>' + data[i].EMAIL + '</td><td>'
                                    + data[i].NO_TELPON_RUMAH + '</td><td>' + data[i].NO_TELPON_HP + '</td><td>' + data[i].ALAMAT + '</td></tr>';
                            }
                        }
                        $(".bodyanggota").html(str);
                    }
                })
            }

        </script>

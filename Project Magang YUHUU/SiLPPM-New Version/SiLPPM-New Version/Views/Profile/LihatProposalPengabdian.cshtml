@{ ViewData["Title"] = "Lihat Detail Proposal Penelitian "; }

<!DOCTYPE html>


<html>
<head>
    <script src="https://polyfill.io/v3/polyfill.min.js?features=default"></script>
    <link rel="stylesheet" type="text/css" href="~/css/mapStyle.css" />
    <script src="~/js/mapJavaScript.js"></script>
    <link href="https://cdn.jsdelivr.net/npm/@@mdi/font@5.x/css/materialdesignicons.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="~/lib/font-awesome-4.7.0/css/font-awesome.min.css">
    <link href="~/lib/bootstrap/dist/css/bootstrap.css" rel="stylesheet" />
    <link rel="stylesheet" href="~/css/style2.css" />
    <!-- Data Table-->
    @*<link rel="stylesheet" href="https://cdn.datatables.net/1.10.25/css/dataTables.bootstrap4.min.css">*@
    <style>
        .button {
            border: none;
            color: white;
            padding: 10px 25px;
            text-align: center;
            text-decoration: none;
            display: inline-block;
            font-size: 16px;
            margin: 4px 2px;
            transition-duration: 0.4s;
            cursor: pointer;
            margin-top: 20px;
            margin-left: 90px;
            border-radius: 20px;
        }

        .button1 {
            background-color: white;
            color: black;
            border: 2px solid #4CAF50;
        }

            .button1:hover {
                background-color: #4CAF50;
                color: white;
            }

        .penelitiID {
            background-color: lightsteelblue;
            margin-top: 50px;
            margin-bottom: 20px;
        }

        body {
            font-family: 'Karla', sans-serif;
        }

        .content-wrapper {
            border-radius: 10px;
            box-shadow: 0 4px 8px 0 rgba(0,0,0,0.2);
            transition: 0.3s;
            border-radius: 10px;
            min-height: auto !important;
            background-color: #ffffff;
            background-repeat: no-repeat;
            background-position: right top;
        }

        .label {
            color: white;
            border-radius: 5px;
            border-spacing: 20px;
            padding: 5px;
            margin-top: 50px;
            font-family: 'Trebuchet MS', 'Lucida Sans Unicode', 'Lucida Grande', 'Lucida Sans', Arial, sans-serif;
            font-size: 20px;
            color: darkslategray
        }

        .title-card {
            color: #FFFFFF;
            background-color: #F2AA4C;
            padding: 15px;
            border-radius: 10px 10px 0px 0px;
            min-width: inherit;
        }

        .radio-checkbox {
            font-size: large;
            letter-spacing: 1px;
        }



        .blue-color {
            background-color: #1d84C6 !important;
        }

        .green-color {
            background-color: #1CB394 !important;
        }

        .btn:active {
            background-color: #ffe7ab;
            transform: translateY(4px);
        }

        .btn:hover {
            background-color: #ffe7ab;
        }

        table {
            border-collapse: collapse;
            width: 100%;
        }

        th, td {
            padding: 8px;
            text-align: left;
            border-bottom: 2px solid #0e207d;
        }

            td .style8 {
                font-weight: bold;
            }
    </style>
</head>
<body>




    <div class="px-3 mt-3">
        <div class="content-wrapper p-3">
            <span style=" background-color:aliceblue; font-weight:bolder; margin-bottom: 20px;"><i class="fa fa-sticky-note" style="margin-right: 20px;"></i> DETAIL PROPOSAL PENGABDIAN</span>
            <hr />
            @*<div class="card card-tabs" style="background-color:lightblue">


                </div>*@
            <div class="d-flex align-items-start" style="border: 1px dashed black; height:auto;padding: 1rem; border-radius:15px">
                <div class="nav flex-column nav-pills me-3" id="v-pills-tab" role="tablist" aria-orientation="vertical">
                    <button class="nav-link active" id="v-pills-prodi-tab" data-bs-toggle="pill"
                            data-bs-target="#v-pills-prodi" type="button" role="tab" aria-controls="v-pills-prodi" aria-selected="true">
                        Prodi
                    </button>
                    <button class="nav-link" id="v-pills-dekan-tab" data-bs-toggle="pill"
                            data-bs-target="#v-pills-dekan" type="button" role="tab" aria-controls="v-pills-dekan" aria-selected="false">
                        Dekan
                    </button>
                    <button class="nav-link" id="v-pills-kriteria-tab" data-bs-toggle="pill"
                            data-bs-target="#v-pills-kriteria" type="button" role="tab" aria-controls="v-pills-kriteria" aria-selected="false">
                        Penilaian
                    </button>
                    <button class="nav-link" id="v-pills-catatan-tab" data-bs-toggle="pill"
                            data-bs-target="#v-pills-catatan" type="button" role="tab" aria-controls="v-pills-catatan" aria-selected="false">
                        Catatan Penilai
                    </button>
                    <button class="nav-link" id="v-pills-kalppm-tab" data-bs-toggle="pill"
                            data-bs-target="#v-pills-kalppm" type="button" role="tab" aria-controls="v-pills-kalppm" aria-selected="false">
                        KALPPM
                    </button>
                </div>
                <div class="tab-content" id="v-pills-tabContent">
                    <div class="tab-pane fade show active" id="v-pills-prodi" role="tabpanel" aria-labelledby="v-pills-prodi-tab">

                        <table class="table table-striped table-bordered table-hover dt-responsive nowrap " style="width:fit-content; margin-left:60px; ">
                            <thead>
                                <tr>
                                    <th class="text-center align-middle" style="width:40%; background-color:lightblue">ID PROPOSAL</th>
                                    <th style="background-color:lightblue">@Model.refpropo.ID_PROPOSAL</th>
                                </tr>

                                <tr>
                                    <th style="width:30%;" class=" text-center align-middle">Feedback Prodi</th>
                                    @if (@Model.feedbackProdi.IS_SETUJU_PRODI == true)
                                    {
                                        <th> Prodi Telah Menyetujui Proposal</th>
                                    }
                                    else
                                    {
                                        <th> Prodi Belum Menyetujui Proposal</th>
                                    }
                                </tr>

                                <tr>
                                    <th style="width:30%;background-color:lightblue" class="text-center align-middle">Status</th>

                                    @if (@Model.feedbackProdi.IS_SETUJU_PRODI == true)
                                    {
                                        <th style="background-color:lightblue"> Menunggu Persetujuan Dekan </th>
                                    }

                                </tr>

                            </thead>
                        </table>
                    </div>
                    <div class="tab-pane fade" id="v-pills-dekan" role="tabpanel" aria-labelledby="v-pills-dekan-tab">

                        <table class="table table-striped table-bordered table-hover dt-responsive nowrap" style="width:fit-content; margin-left:60px; ">
                            <thead>
                                <tr>
                                    <th style="width:40%; background-color:lightblue" class="text-center align-middle">ID PROPOSAL</th>
                                    <th style="background-color:lightblue">@Model.refpropo.ID_PROPOSAL</th>
                                </tr>

                                <tr>
                                    <th style="width:30%;" class="text-center align-middle">Feedback Dekan</th>
                                    @if (@Model.feedbackDekan.IS_SETUJU_DEKAN == true)
                                    {
                                        <th> Dekan Telah Menyetujui Proposal</th>
                                    }
                                    else
                                    {
                                        <th> Dekan Belum Menyetujui Proposal</th>
                                    }
                                </tr>

                                <tr>
                                    <th style="width:30%;background-color:lightblue" class="text-center align-middle">Status</th>

                                    @if (@Model.feedbackDekan.IS_SETUJU_DEKAN == true)
                                    {
                                        <th style="background-color:lightblue"> Menunggu persetujuan LPPM </th>
                                    }


                                </tr>

                            </thead>
                        </table>

                    </div>

                    <div class="tab-pane fade" id="v-pills-kriteria" role="tabpanel" aria-labelledby="v-pills-kriteria-tab">
                        <table class="table table-striped table-bordered table-hover dt-responsive nowrap" style="width:fit-content;  margin-left:60px; ">
                            <thead>
                                <tr class="text-center align-middle">
                                    <th style="width:30%; background-color:lightblue">Kriteria Penilaian</th>
                                    <th style="background-color:lightblue">Nilai</th>
                                    <th style="width: 30%; background-color: lightblue">Justifikasi Penilaian</th>

                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model.kriteria)
                                {
                                    <tr class="text-center align-middle">
                                        <td> @item.KRITERIA</td>
                                        <td></td>
                                        <td></td>
                                    </tr>
                                }
                            </tbody>
                        </table>

                    </div>
                    <div class="tab-pane fade" id="v-pills-catatan" role="tabpanel" aria-labelledby="v-pills-catatan-tab">
                        <table class="table table-striped table-bordered table-hover dt-responsive nowrap" style="width:fit-content;  margin-left:60px; ">
                            <thead>

                                <tr class="text-center align-middle">
                                    <th style="width:30%; background-color:lightblue" colspan="2">Catatan Penilai :</th>

                                </tr>
                                <tr>
                                    <td>Kekuatan atau keunikan Proposal ini</td>
                                    <td></td>


                                </tr>
                                <tr>
                                    <td>Beberapa Argumentasi kunci yang digunakan dalam penilaian proposal ini</td>
                                    <td></td>

                                </tr>
                                <tr>
                                    <td>Dokumen-dokumen yang perlu dilampirkan sebagai tambahan</td>
                                    <td></td>

                                </tr>
                                <tr>
                                    <td>Beberapa ide yang ditambahkan untuk memperkaya atau meningkatkan kualitas proposal ini</td>
                                    <td></td>

                                </tr>

                            </thead>
                            <tbody>


                                <tr class="text-center align-middle">
                                    <th style="width:30%; background-color:lightblue" colspan="2">Catatan Akhir :</th>
                                </tr>
                                <tr>
                                    <td>Kesimpulan penilai proposal ini</td>
                                    <td></td>


                                </tr>
                                <tr>
                                    <td>Anggaran yang disarankan untuk disetujui adalah</td>
                                    <td></td>

                                </tr>
                                <tr>
                                    <td>Usulan ini memiliki keunikan</td>
                                    <td></td>

                                </tr>
                              
                            </tbody>
                        </table>

                    </div>
                    <div class="tab-pane fade" id="v-pills-kalppm" role="tabpanel" aria-labelledby="v-pills-kalppm-tab">
                        <table class="table table-striped table-bordered table-hover dt-responsive nowrap" style="width:fit-content; margin-left:60px; ">
                            <thead>
                                <tr>
                                    <th style="width:30%; background-color:lightblue" class="text-center align-middle">ID PROPOSAL</th>
                                    <th style="background-color:lightblue">@Model.refpropo.ID_PROPOSAL</th>
                                </tr>

                                <tr>
                                    <th style="width:30%;" class="text-center align-middle">Feedback KALPPM</th>
                                    @if (@Model.feedbackLPPM.IS_SETUJU_LPPM == true)
                                    {
                                        <th> KALPPM Telah Menyetujui Proposal</th>
                                    }
                                    else
                                    {
                                        <th> KALPPM Belum Menyetujui Proposal</th>
                                    }
                                </tr>

                                <tr>
                                    <th style="width:30%;background-color:lightblue" class="text-center align-middle">Status</th>
                                    <th style="width:30%; background-color:lightblue"></th>

                                </tr>

                            </thead>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>

</html>
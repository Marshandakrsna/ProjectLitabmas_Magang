    <style>
        @@import url('https://fonts.googleapis.com/css2?family=Karla:wght@400;500;600;700&display=swap');

        body {
            font-family: 'Karla', sans-serif;
        }

        .label {
            color: white;
            border-radius: 5px;
            border-spacing: 20px;
            padding: 5px;
            margin-top: 50px;
            margin-bottom: 60px;
        }

        .wrapper .tooltip {
            position: absolute;
            top: 0;
            font-size: 14px;
            background: #ffffff;
            color: #ffffff;
            padding: 5px 8px;
            border-radius: 5px;
            box-shadow: 0 10px 10px rgba(0, 0, 0, 0.1);
            opacity: 0;
            pointer-events: none;
            transition: all 0.3s cubic-bezier(0.68, -0.55, 0.265, 1.55);
        }

            .wrapper .tooltip::before {
                position: absolute;
                content: "";
                height: 8px;
                width: 8px;
                background: #ffffff;
                bottom: -3px;
                left: 50%;
                transform: translate(-50%) rotate(45deg);
                transition: all 0.3s cubic-bezier(0.68, -0.55, 0.265, 1.55);
            }

        .wrapper .icon:hover .tooltip {
            top: -45px;
            opacity: 1;
            visibility: visible;
            pointer-events: auto;
        }

        .wrapper .icon:hover span,
        .wrapper .icon:hover .tooltip {
            text-shadow: 0px -1px 0px rgba(0, 0, 0, 0.1);
        }


        .wrapper .edit:hover .tooltip,
        .wrapper .edit:hover .tooltip::before {
            background: #2b8a50;
            color: #ffffff;
        }


        .wrapper .download:hover .tooltip,
        .wrapper .download:hover .tooltip::before {
            background: #3b5999;
            color: #ffffff;
        }

            .wrapper .downloadPengesahan:hover .tooltip,
            .wrapper .download:hover .tooltip::before {
                background: #aa2828;
                color: #ffffff;
            }

        :root {
            --bg: #dcdde1;
            --color-icon: #535c68;
            --social-icon1: #2b8a50;
            --social-icon2: #3b5999;
            --social-icon3: #aa2828;
            --social-icon4: #3b5999;
            --social-icon5: #0077B5;
        }

     
        section {
          
            display: flex;
            align-items: center;
            justify-content: center;
            z-index: -10;
        }

        .icon-list {
            width: 100%;
            max-width: 50rem;
            padding: 0 1.5rem;
            display: flex;
            justify-content: space-between;
        }

        .icon-item {
            list-style: none
        }

        .icon-link {
            display: inline-flex;
            font-size: 1.5rem;
            text-decoration: none;
            color: var(--color-icon);
            width: 3rem;
            height: 3rem;
            transition: .5s linear;
            position: relative;
            z-index: 1;
            margin: auto
        }

            .icon-link:hover {
                color: #fff;
            }

            .icon-link i {
                margin: auto;
            }

            .icon-link::before {
                content: '';
                position: absolute;
                top: 0;
                left: 0;
                right: 0;
                bottom: 0;
                width: 3rem;
                height: 3rem;
                background: #000;
                border-radius: 50%;
                z-index: -1;
                transform: scale(0);
                transition: 0.3s cubic-bezier(.95, .32, .37, 1.21);
            }

            .icon-link:hover::before {
                transform: scale(1);
            }

        .edit a:hover:before {
            background: var(--social-icon1);
        }



        .download a:hover:before {
            background: #3b5999;
        }
        .downloadPengesahan a:hover:before {
            background: var(--social-icon3);
        }

       
        .nav-pills .nav-link.active, .nav-pills .show>.nav-link {
    color: #fff;
    background-color:darkslateblue;
    border-radius: 51px;
}

        .stylePengabdian {

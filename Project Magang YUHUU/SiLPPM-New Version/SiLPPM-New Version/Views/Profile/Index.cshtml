                            </tr>
                            <tr>
                                <td class="style8">
                                    Bidang Keahlian
                                </td>
                                <td>
                                    <asp:Label ID="lblKeahlian" runat="server" Text="Tidak Tersedia"></asp:Label>
                                </td>
                            </tr>
                        </thead>
                        <tbody>
                        </tbody>
                    </table>
                </div>
                <div>
                    <span class="label penelitianDiajukan">Proposal yang sudah diajukan :</span>
                  <br />
                    <br />
                    <br />
                </div>

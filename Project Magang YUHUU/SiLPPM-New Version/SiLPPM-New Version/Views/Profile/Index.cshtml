                            </tr>
                            <tr>
                                <td class="style8">
                                    Alamat Kantor
                                </td>
                                <td>
                                    <asp:Label ID="lblAlamatKantor" runat="server" Text="Tidak Tersedia"></asp:Label>
                                </td>
                            </tr>
                            <tr>
                                <td class="style8">
                                    No. Telp/Faks
                                </td>
                                <td>
                                    <asp:Label ID="lblTelpKetua" runat="server" Text="Tidak Tersedia"></asp:Label>
